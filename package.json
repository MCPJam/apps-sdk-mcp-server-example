{
  "name": "asana-chatgpt-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm run dev:all",
    "dev:app": "pnpm --filter asana-chatgpt-app-web dev",
    "dev:mcp": "pnpm --filter asana-chatgpt-app-mcp-server run start",
    "dev:widgets": "cd widgets && vite dev --host --port 4444",
    "dev:all": "concurrently --kill-others-on-fail --names \"MCP,WIDGET,APP\" --prefix-colors \"blue,magenta,green\" \"pnpm run dev:mcp\" \"pnpm run dev:widgets\" \"pnpm run dev:app\"",
    "build:mcp": "pnpm --filter asana-chatgpt-app-mcp-server run build",
    "start:mcp": "pnpm --filter asana-chatgpt-app-mcp-server run start",
    "lint": "pnpm -r lint"
  },
  "workspaces": [
    "app",
    "mcp_server_node",
    "widgets/*",
    "shared-types"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}