{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm install --frozen-lockfile && cd widgets && pnpm run build && cd .. && mkdir -p app/public && cp widgets/dist/tasks.* widgets/tasks/asana.png app/public/ && cd app && pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "app/dist",
  "framework": null,
  "rewrites": [
    {
      "source": "/:path((?!api)(?!@vite)(?!@react-refresh)(?!src)(?!node_modules)(?!@fs)(?!.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
