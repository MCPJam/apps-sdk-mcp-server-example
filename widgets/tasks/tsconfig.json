{
  "extends": "../../shared-types/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@asana-chatgpt-app/shared-types": ["../../shared-types/src/index.ts"]
    },
    "types": ["vite/client"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}